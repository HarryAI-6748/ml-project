        "Name: Harkirat Singh
          Roll Number: IITP_AIMLH_26020234
          Assignment: Python Loops & Automation - Subjective Question"
        "print(\"Task 1: Find the maximum and minimum temperature from a list of temperatures.\", \"\\n\")\n",
        "temp = [28, 32, 35, 29, 31, 27, 30]\n",
        "max_value = temp[0]\n",
        "min_value = temp[1]\n",
        "for t in temp:\n",
        "    if t > max_value:\n",
        "        max_value = t\n",
        "    elif t < min_value:\n",
        "        min_value = t\n",
        "print(f\"Minimum temperature: {min_value}\")\n",
        "print(f\"Maximum Temperature: {max_value}\", \"\\n\")\n",
        "#\n",
        "print(\"Task 2: Count how many days had temperature above 30°C. Skip days with temperature ≤30°C using continue.\", \"\\n\")\n",
        "ht = 0\n",
        "for t in temp:\n",
        "    if t > 30:\n",
        "        ht += 1\n",
        "    else:\n",
        "        continue\n",
        "print(f\"Hot Days (>30°C): {ht}\", \"\\n\")\n",
        "#\n",
        "print(\"Task 3: Count hot days but stop immediately if temperature reaches 40°C or higher using break.\", \"\\n\")\n",
        "temperatures = [28, 32, 35, 40, 31, 33, 30]\n",
        "htt = 0\n",
        "for t in temperatures:\n",
        "    if t > 30:\n",
        "        if t >= 40:\n",
        "            break\n",
        "        else:\n",
        "            htt += 1\n",
        "print(f\"Hot Days before alert: {htt}\")\n",
        "print(f\"Alert! Extreme temperature 40°C detected on Day {temperatures.index(t) + 1}\", \"\\n\")"
